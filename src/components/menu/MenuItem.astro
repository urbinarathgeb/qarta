---
// Un plato individual en el menú
export interface Dish {
  id: string;
  name: string;
  description: string;
  price: number;
  available: boolean;
  image_url?: string;
  created_at?: string;
}

const { dish } = Astro.props;

// Formatea el precio al formato chileno en una sola línea
const formattedPrice = ((price: number) =>
  price.toLocaleString("es-CL"))(dish.price);
---

<li class="flex flex-col py-2">
  <div class="flex justify-between">
    <h3 class="title-md">
      {dish.name}
    </h3>
    <p class="text-description font-bold">
      ${formattedPrice}
    </p>
  </div>
  <p class="text-description">
    {dish.description}
  </p>
</li>
