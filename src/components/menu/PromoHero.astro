---
export interface PromoHeroProps {
  image: string;
  icon?: any;
  title: string;
  subtitle?: string;
  description?: string;
  price?: number;
}

const { image, icon, title, subtitle, description, price } = Astro.props;
---

<div class="w-full bg-background rounded-b-lg overflow-hidden">
  <!-- Imagen hero -->
  {image && <img src={image} alt={title} class="w-full h-40 object-cover" />}

  <!-- Icono y tÃ­tulo -->
  <div class="flex flex-col items-center">
    {icon && <span class="mb-2">{icon}</span>}
    <h2 class="title-lg">
      {title}
    </h2>
    {subtitle && <p class="text-body">{subtitle}</p>}
    {description && <p class="text-description">{description}</p>}
    {price && <p class="title-lg">${price.toLocaleString('es-CL')}</p>}
  </div>
</div>
