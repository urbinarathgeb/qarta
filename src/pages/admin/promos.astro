---
import Layout from "../../layouts/Layout.astro";
import AdminAuthWrapper from "../../components/AdminAuthWrapper";
import AdminPromos from "../../components/AdminPromos";
---

<Layout>
  <AdminAuthWrapper client:load>
    <main
      class="w-full max-w-screen-2xl mx-auto px-4 min-h-screen bg-background font-serif py-8"
    >
      <h1 class="text-2xl font-bold mb-6 text-center">
        Administrar Promos
      </h1>
      <p class="text-center text-muted mb-8">
        Aquí podrás crear, editar y eliminar promociones del
        día.
      </p>
      <AdminPromos client:load />
      <a
        href="/admin"
        class="block mt-10 text-primary hover:underline text-center"
        >Volver al panel principal</a
      >
    </main>
  </AdminAuthWrapper>
</Layout>
