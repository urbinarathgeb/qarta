---
import AdminAuthWrapper from "@/components/admin/AdminAuthWrapper";
import AdminPromos from "@/components/admin/AdminPromos";
import AdminLayout from "@/layouts/AdminLayout.astro";
---

<AdminLayout>
  <AdminAuthWrapper client:load>
    <main
      class="col-start-2 w-full max-w-screen-2xl mx-auto px-4 min-h-screen bg-background font-serif py-8"
    >
      <h1 class="text-2xl font-bold mb-6 text-center">
        Administrar Promos
      </h1>
      <p class="text-center text-muted mb-8">
        Aquí podrás crear, editar y eliminar promociones del
        día.
      </p>
      <AdminPromos client:load />
      <a
        href="/admin"
        class="block mt-10 text-primary hover:underline text-center"
        >Volver al panel principal</a
      >
    </main>
  </AdminAuthWrapper>
</AdminLayout>
