---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { DishManager, PromoManager } from '@/features/admin/components';
---

<AdminLayout>
  <div class="flex min-h-screen">
    <aside
      class="bg-gray-800 text-white h-screen w-64 transition-all duration-300 ease-in-out shrink-0"
    >
      <div class="flex items-center justify-between px-4 py-3">
        <h1 class="text-lg">Panel Avanzado</h1>
      </div>
      <nav class="flex flex-col mt-4 gap-2">
        <h2 class="px-4 text-xs text-gray-400 uppercase">Gestión mejorada</h2>
        <a href="#dishes" class="px-4 py-2 text-left hover:bg-gray-700"> Gestión de Platos </a>
        <a href="#promos" class="px-4 py-2 text-left hover:bg-gray-700"> Gestión de Promociones </a>
        <hr class="border-gray-700 my-4" />
        <a href="/admin" class="px-4 py-2 text-left hover:bg-gray-700"> Volver al panel normal </a>
      </nav>
    </aside>

    <main class="flex-1 p-6 overflow-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">Panel de Administración Avanzado</h1>
        <p class="text-gray-600">
          Gestiona tus platos y promociones con las herramientas mejoradas
        </p>
      </div>

      <div class="space-y-10">
        <section id="dishes" class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-xl font-bold mb-4 border-b pb-2">Gestión de Platos</h2>
          <DishManager client:load filtro={{ tipo: 'todos', valor: '' }} />
        </section>

        <section id="promos" class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-xl font-bold mb-4 border-b pb-2">Gestión de Promociones</h2>
          <PromoManager client:load filtro={{ tipo: 'todos', valor: '' }} />
        </section>
      </div>
    </main>
  </div>
</AdminLayout>
